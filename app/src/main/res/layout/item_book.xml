<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#727BAA"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">

   <LinearLayout
       android:padding="8dp"
       android:background="@drawable/backg_auth"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
         <LinearLayout
          android:padding="5dp"
          android:layout_marginEnd="5dp"
          android:background="@drawable/border_port_author"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/imgBook"
             android:layout_width="150dp"
             android:layout_height="150dp"/>
      </LinearLayout>
         <androidx.appcompat.widget.AppCompatButton
             android:id="@+id/btnAboutBook"
             android:layout_gravity="center_horizontal"
             android:layout_marginEnd="15dp"
             android:layout_marginStart="15dp"
             android:layout_marginTop="5dp"
             android:textColor="@color/white"
             android:background="@drawable/back_butt"
             android:text="Подробнее"
             android:textAllCaps="false"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
      </LinearLayout>

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <TextView
             android:id="@+id/txtBookName"
             android:background="@drawable/back_book_name"
             android:textAlignment="center"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:text="Name book"
             android:layout_marginEnd="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/txtGenre"
             android:textAlignment="center"
             android:text="Genre:"
             android:textStyle="italic"
             android:background="@drawable/back_book_genre"
             android:textColor="#EF3737"
             android:layout_marginEnd="5dp"
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/txtDescription"
             android:layout_marginStart="2dp"
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
      </LinearLayout>

   </LinearLayout>

</androidx.cardview.widget.CardView>