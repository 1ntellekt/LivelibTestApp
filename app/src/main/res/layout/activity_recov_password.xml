<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg_auth"
    tools:context=".RecovPasswordActivity">

    <Toolbar
        android:id="@+id/toolbarLiveLib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:background="@drawable/toolbar_backg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_books" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:fontFamily="serif"
                android:text="LiveLib"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </Toolbar>

    <LinearLayout
        android:layout_below="@id/toolbarLiveLib"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
        android:id="@+id/titleSign"
        android:padding="5dp"
            android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Recovery account User"
        android:textStyle="italic|bold"
        android:background="@drawable/back_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@drawable/back_butt"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_books"
                android:layout_width="180dp"
                android:layout_height="180dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginTop="5dp"
                android:inputType="textPersonName"
                android:id="@+id/txtNickName"
                android:drawableEnd="@drawable/ic_person"
                android:lines="1"
                android:hint="Your nickname"
                android:padding="8dp"
                android:textColorHint="#2A4043"
                android:background="@drawable/back_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress"
                android:id="@+id/txtPersonEmail"
                android:drawableEnd="@drawable/ic_email"
                android:lines="1"
                android:hint="Your email"
                android:padding="8dp"
                android:textColorHint="#2A4043"
                android:background="@drawable/back_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:clickable="true"
                android:padding="4dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:id="@+id/txtChangeEdit"
                android:textColor="#A51992"
                android:background="@drawable/back_edit_txt"
                android:layout_marginTop="5dp"
                android:text="Forgot nickname?"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginStart="70dp"
                android:textAlignment="center"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="5dp"
                android:inputType="textPhonetic"
                android:id="@+id/txtPersonCode"
                android:drawableEnd="@drawable/ic_verified_user"
                android:lines="1"
                android:hint="Your person code"
                android:padding="8dp"
                android:textColorHint="#2A4043"
                android:background="@drawable/back_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtAccess"
                android:textColor="@color/red"
                android:layout_marginTop="5dp"
                android:text="Your code is true. Please input a new password to change "
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:id="@+id/txtNewPass"
                android:drawableEnd="@drawable/ic_lock"
                android:lines="1"
                android:hint="Your new password"
                android:padding="8dp"
                android:textColorHint="#2A4043"
                android:background="@drawable/back_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:id="@+id/txtNewPass_second"
                android:lines="1"
                android:drawableEnd="@drawable/ic_lock"
                android:hint="Confirm your new password"
                android:padding="8dp"
                android:textColorHint="#2A4043"
                android:background="@drawable/back_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSend"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Send code"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/back_regist_butt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>