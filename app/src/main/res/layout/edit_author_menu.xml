<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/edit_menu_author_back"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="#03A9F4"
            android:id="@+id/edit_create_TxtView"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Edit author menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtAuthorName"
            android:background="@drawable/background_name_author"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:text="Author Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_port_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgAuthor"
                android:layout_width="180dp"
                android:src="@drawable/ic_person"
                android:layout_height="180dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="11">
            <EditText
                android:padding="8dp"
                android:background="@drawable/back_edit_txt"
                android:id="@+id/txtLinkImg"
                android:hint="Url image"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:id="@+id/btnCheckImg"
                android:src="@drawable/ic_check"
                android:background="@color/green"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:padding="8dp"
                android:background="@drawable/back_edit_txt"
                android:hint="Author name"
                android:layout_marginTop="5dp"
                android:id="@+id/txtEditAuthorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:padding="8dp"
                android:background="@drawable/back_edit_txt"
                android:hint="Author biography"
                android:layout_marginTop="6dp"
                android:id="@+id/txtEditAuthorBiography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>